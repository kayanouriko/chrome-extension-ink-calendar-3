{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "noEmit": true,
        "types": ["@types/chrome", "@types/node"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "option/src/**/*.ts",
        "option/src/**/*.d.ts",
        "option/src/**/*.tsx",
        "option/src/**/*.vue"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
